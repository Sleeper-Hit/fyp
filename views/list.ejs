<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
.card {
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    transition: 0.3s;
    width: 40%;
    border-radius: 5px;
}

.card:hover {
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.container {
    padding: 2px 16px;
}
</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body>
	<h2>Current Rooms Available</h2>

	<p><a href="/rooms/create" class="placeOrder">Post A Room</a></p>

	<% if (orders && orders.length) { %>
	  <% orders.forEach((item) => { %>
	  <% var link = "/rooms/" + item._id; %>
	  <div class="card">
  		<div class="container" style="text-align: center">
  		  <h4>Title: <a href=<%= link %> ><%= item.Title %></a></h4>
  		  <p><b>Options:</b> <%= item.Options %></p>
        <p><b>Address:</b> <%= item.Address %></p>
  		  <p><b>Price:</b> <%= item.Price %></p>
        <button class="delete"><a href=<%= link + "/delete" %>>Delete</a></button><br /><br /><br />
  		</div>
	  </div>
	  <% }) %>
	<% } %>

</body>
